@model MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h4 style="font-family:Cooper Black; color:#b5e2ff; font-size:30px">Registered Films</h4>



<form asp-controller="Movies" asp-action="Index" method="get">
    <p style="font-family:Arial; color:#b5e2ff; font-size:15px">
        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Search" />
    
        <a class="btn btn-small btn-outline-light text-light" asp-action="Create" style="margin-left: 500px;">Add New Film</a>
    </p>
</form>
<table class="table" style="font-family:Arial; color:#b5e2ff; font-size:15px">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Price)
            </th>
            <th>@Html.DisplayNameFor(m => m.Movies[0].Rating)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movies) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(model => item.Rating)
            </td>
            <td>
                <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                    <a class="btn btn-small btn-success" asp-action="Edit" asp-route-id="@item.ID">Update </a>  
                    <a class="btn btn-small btn-secondary" asp-action="Details" asp-route-id="@item.ID"> Details </a>
                    <a class="btn btn-small btn-danger" asp-action="Delete" asp-route-id="@item.ID"> Remove</a>
                </div>
              
            </td>
        </tr>
}
    </tbody>
</table>
