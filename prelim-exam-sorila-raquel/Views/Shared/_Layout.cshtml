<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PANCAKE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/checkTextbox.css" rel="stylesheet" />
   <!-- <link href="~/Home/Index.css" rel="stylesheet" />-->
</head>
<body class="body bg-secondary" style="background-image: linear-gradient(#187bcd, #03254c);">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-#03254c border-bottom box-shadow mb-3">
            <div class="container">
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index" style="font-family:Cooper Black; color:#187bcd; font-size:20px">Movie Mania</a>
                        </li>
        
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Directors" asp-action="Index" style="font-family:Cooper Black; color:#187bcd; font-size:20px">Directors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Movies" asp-action="Index" style="font-family:Cooper Black; color:#187bcd; font-size:20px">Films</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="About" style="font-family:Cooper Black; color:#187bcd; font-size:20px">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
       
            <div class="container" style="background-color: #03254c; color:#187bcd; font-weight:bold; font-family:Arial; font-size:12px;">
                &copy; 2020 - BSIT31E1 | PANCAKE | ROBEL/SORILA
            </div>
       
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/checkTextbox.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
